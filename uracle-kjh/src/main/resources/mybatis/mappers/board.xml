<?xml version="1.0" encoding="UTF-8"?>
<!-- namespace 설정 -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">

	<!-- 삽입을 위한 sql추가 -->
	<insert id="insert" parameterType="BoardVO">
	<!-- <![CDATA[]> 안에 있는 쿼리를 평문으로 읽음 --> 
	<![CDATA[
		insert into 
			board(title, body, regDate, writer, redcnt)
		values(
			#{title}, #{body}, NOW(), #{writer}, #{redcnt}
		  )
	]]>
	</insert>
	
 	<!-- 글번호를 가지고 조회수를 1증가 시키는 sql. --> 		
 	<update id="updateReadcnt" parameterType="hashMap">
    <![CDATA[
        UPDATE board
        SET
            redcnt = redcnt+ 1
        WHERE
            id = #{id}   
    ]]>
</update> 
 
<!-- 글번호를 가지고 하나의 데이터를 가져오는  sql -->
 <select id="detail" parameterType="hashMap" resultType="BoardVO">
<![CDATA[
        SELECT
        	id,
            title,
            body,
            writer,
            regDate,
            redcnt
        FROM
            board
        WHERE
            id = #{id}       
    ]]>
    </select> 
	<!-- 전체 목록을 가져오는 sql -->
	<select id="getList" resultType="BoardVO"> 
		select * from board 
	</select>
	
	<!-- 게시글을 수정하는 sql -->
<update id="update" parameterType="BoardVO">
<![CDATA[
	update board
	set title=#{title}, body=#{body},
		 regdate=sysdate
	where id = #{id}
	]]>
</update>

<!-- 글번호를 가지고 게시글을 삭제하는 sql -->
<delete id="delete" parameterType="hashMap">
<![CDATA[
	delete from board
	where id = #{id}
	]]>
</delete>

	
	

</mapper>